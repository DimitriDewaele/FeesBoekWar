<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <flow-definition id="flowConfiguration">
        <flow-return id="returnFromFlowConfiguration">
            <from-outcome>#{flowConfigurationBean.returnValue}</from-outcome>
        </flow-return>

        <inbound-parameter>
            <name>param1FromFlowProgrammatic</name>
            <value>#{flowScope.param1Value}</value>
        </inbound-parameter>
        <inbound-parameter>
            <name>param2FromFlowProgrammatic</name>
            <value>#{flowScope.param2Value}</value>
        </inbound-parameter>
        
        <flow-call id="callflowProgrammatic">
            <flow-reference>
                <flow-id>flowProgrammatic</flow-id>
            </flow-reference>
            <outbound-parameter>
                <name>param1FromFlowConfiguration</name>
                <value>param1 flowConfiguration value</value>
            </outbound-parameter>
            <outbound-parameter>
                <name>param2FromFlowConfiguration</name>
                <value>param2 flowConfiguration value</value>
            </outbound-parameter>
        </flow-call>
    </flow-definition>
</faces-config>
